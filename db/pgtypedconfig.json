{
  "transforms": [
    {
      "mode": "sql",
      "include": "**/*.sql",
      "emitTemplate": "{{dir}}/{{name}}.queries.ts"
    },
    {
      "mode": "ts",
      "include": "**/*.ts",
      "emitTemplate": "{{dir}}/{{name}}.types.ts"
    }
  ],
  "srcDir": "./src/",
  "failOnError": false,
  "camelCaseColumnNames": false,
  "db": {
    "dbName": "postgres",
    "user": "postgres",
    "password": "",
    "host": "localhost",
    "port": 5432,
    "ssl": false,
    "dbUrl": "postgres://postgres@localhost/postgres"
  }
}
